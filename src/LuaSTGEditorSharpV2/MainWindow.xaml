<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuaSTGEditorSharpV2"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        xmlns:lsv="clr-namespace:LuaSTGEditorSharpV2.View;assembly=LuaSTGEditorSharpV2.View"
        xmlns:lpv="clr-namespace:LuaSTGEditorSharpV2.PropertyView;assembly=LuaSTGEditorSharpV2.PropertyView"
        x:Class="LuaSTGEditorSharpV2.MainWindow"
        mc:Ignorable="d"
        Title="LuaSTG Editor Sharp V2" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="defaultPropertyView">
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Name}" />
                <TextBox Grid.Column="1" Text="{Binding Value, Mode=OneWay}" LostFocus="PropertyTextBox_LostFocus"/>
                <Button Grid.Column="2" Height="15" Content="..." Click="PropertyButton_Click"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Top">
            <Menu>
                <MenuItem Header="_File"></MenuItem>
            </Menu>
        </Border>
        <Border DockPanel.Dock="Top">
            <ToolBarTray>
                <ToolBar>
                    <Button>
                        <Button.Content>
                            <Image Source="pack://application:,,,/LuaSTGEditorSharpV2.Resources.Shared;component/images/editor/new.png" Stretch="Fill" Width="24" Height="24"/>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="New File (Ctrl+N)"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                </ToolBar>
            </ToolBarTray>
        </Border>
        <xcad:DockingManager>
            <xcad:DockingManager.Theme>
                <xcad:VS2010Theme/>
            </xcad:DockingManager.Theme>
            <xcad:LayoutRoot>
                <xcad:LayoutPanel Orientation="Horizontal">
                    <xcad:LayoutAnchorablePane DockWidth="200">
                        <xcad:LayoutAnchorable Title="Property">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible"
                                          DataContext="{Binding PropertyPage}">
                                <ItemsControl x:Name="_propertyView" ItemsSource="{Binding Properties}" Background="FloralWhite">
                                    <ItemsControl.ItemTemplateSelector>
                                        <lpv:PropertyItemTemplateSelector Default="{StaticResource ResourceKey = defaultPropertyView}"/>
                                    </ItemsControl.ItemTemplateSelector>
                                </ItemsControl>
                            </ScrollViewer>
                        </xcad:LayoutAnchorable>
                    </xcad:LayoutAnchorablePane>
                    <xcad:LayoutPanel Orientation="Vertical">
                        <xcad:LayoutDocumentPaneGroup>
                            <xcad:LayoutDocumentPane>
                                <xcad:LayoutDocument Title="Document 1">
                                    <TreeView FontFamily="Terminal"
                                              Grid.Column="2" VirtualizingPanel.IsVirtualizing="True" DataContext="{Binding Document}"
                                              ItemsSource="{Binding Tree}" SelectedItemChanged="TreeView_SelectedItemChanged">
                                        <TreeView.ItemTemplate>
                                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="{Binding Icon}"
                                                           Stretch="Fill" Width="16" Height="16" Margin="0,0,2,2" 
                                                           VerticalAlignment="Top"/>
                                                    <TextBlock VerticalAlignment="Center" Text="{Binding Text}"/>
                                                </StackPanel>
                                            </HierarchicalDataTemplate>
                                        </TreeView.ItemTemplate>
                                    </TreeView>
                                </xcad:LayoutDocument>
                            </xcad:LayoutDocumentPane>
                        </xcad:LayoutDocumentPaneGroup>
                        <xcad:LayoutAnchorablePaneGroup DockHeight="150">
                            <xcad:LayoutAnchorablePane>
                                <xcad:LayoutAnchorable Title="Error">
                                    <DataGrid>
                                        
                                    </DataGrid>
                                </xcad:LayoutAnchorable>
                                <xcad:LayoutAnchorable Title="Output">
                                    <TextBox>

                                    </TextBox>
                                </xcad:LayoutAnchorable>
                            </xcad:LayoutAnchorablePane>
                        </xcad:LayoutAnchorablePaneGroup>
                    </xcad:LayoutPanel>
                </xcad:LayoutPanel>
            </xcad:LayoutRoot>
        </xcad:DockingManager>
    </DockPanel>
</Window>
