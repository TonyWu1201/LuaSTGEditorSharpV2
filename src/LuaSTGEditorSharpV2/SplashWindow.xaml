<Window x:Class="LuaSTGEditorSharpV2.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuaSTGEditorSharpV2"
        mc:Ignorable="d"
        Title="SplashWindow" Height="225" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12.5"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Grid.Row="1" 
               Source="icon_huge.png"/>
        <TextBlock Grid.Column="1" Grid.Row="2"
                   Text="LuaSTG Editor Sharp V2"
                   FontSize="24"
                   FontWeight="Bold" 
                   FontFamily="Times New Roman"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
